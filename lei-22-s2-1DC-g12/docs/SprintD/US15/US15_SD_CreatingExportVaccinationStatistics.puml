@startuml
'https://plantuml.com/sequence-diagram

autonumber

autonumber

participant "App" as APP
participant ":Company" as COMP
participant ":Platform" as PLAT
participant "ru\n:RegisterUsers" as RU
participant "auth:AuthFacade" as AF
participant "registerSNSUser\n:RegisterSNSUser" as RE
participant "registerEmployee\n:RegisterEmployee" as R



activate APP
APP --> COMP** : create(designation)
activate COMP

COMP --> PLAT **: create(designation)
COMP --> AF **: create()
COMP --> RU **: create(auth)
deactivate COMP
APP -> APP ++: bootstrap()
APP -> PLAT: initializeRegisters(ru)

activate PLAT
PLAT --> RE **: create(ru)
PLAT --> R **: create(ru)

deactivate PLAT
deactivate APP
@enduml